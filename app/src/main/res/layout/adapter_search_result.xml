<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <!--<com.reputasi.callblocker.view.custom.ReputasiTextView
            android:layout_marginTop="@dimen/incoming_call_score_title_spacing"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            custom:fontType="robotoBold"
            android:text="@string/score_title"
            android:textSize="@dimen/incoming_call_score_title_textsize"
            android:textColor="@color/white"
            />-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/reputasi_score_base_searchpopup"
            android:layout_margin="@dimen/incoming_call_layout_circle_spacing"
            >
            <com.reputasi.callblocker.view.custom.ReputasiTextView
                android:id="@+id/tv_caller_score"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                custom:fontType="robotoBold"
                android:text="0"
                android:maxLength="3"
                android:textColor="@color/incoming_call_text"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:id="@+id/ll_searching"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <com.reputasi.callblocker.view.custom.ReputasiTextView
                    android:id="@+id/tv_searching"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    custom:fontType="robotoBold"
                    android:textSize="@dimen/incoming_call_text_number_name_textsize"
                    android:textColor="@color/white"
                    android:text="@string/searching_text"
                    />
            </LinearLayout>
            <LinearLayout
                android:visibility="visible"
                android:id="@+id/ll_information"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.reputasi.callblocker.view.custom.ReputasiTextView
                    android:id="@+id/tv_caller_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    custom:fontType="robotoBold"
                    android:textSize="@dimen/incoming_call_text_number_name_textsize"
                    android:textColor="@color/white"
                    android:text="Vikra Alviano"
                    />
                <com.reputasi.callblocker.view.custom.ReputasiTextView
                    android:id="@+id/tv_category_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    custom:fontType="robotoRegular"
                    android:textSize="9dp"
                    android:textColor="@color/white"
                    android:text="CategoryName"
                    />
                <com.reputasi.callblocker.view.custom.ReputasiTextView
                    android:layout_below="@+id/tv_caller_name"
                    android:id="@+id/tv_caller_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    custom:fontType="robotoRegular"
                    android:textSize="@dimen/incoming_call_text_title_name_textsize"
                    android:textColor="@color/white"
                    android:text="Engineer"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:gravity="bottom|right">
                <ImageView
                    android:padding="@dimen/incoming_call_thumbs_icon_spacing"
                    android:src="@drawable/thumbs_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.reputasi.callblocker.view.custom.ReputasiTextView
                    android:id="@+id/tv_caller_thumbup_score"
                    android:padding="@dimen/incoming_call_text_icon_spacing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    custom:fontType="robotoRegular"
                    android:text="0"
                    android:textColor="@color/white"
                    />
                <ImageView
                    android:padding="@dimen/incoming_call_thumbs_icon_spacing"
                    android:src="@drawable/thumbs_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.reputasi.callblocker.view.custom.ReputasiTextView
                    android:id="@+id/tv_caller_thumbdown_score"
                    android:padding="@dimen/incoming_call_text_icon_spacing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    custom:fontType="robotoRegular"
                    android:text="0"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
