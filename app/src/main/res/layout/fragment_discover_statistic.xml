<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/ll_spamer_refresh"
        android:paddingTop="@dimen/spammer_layout_spacing"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_listview">
        <RelativeLayout
            android:layout_marginRight="@dimen/spammer_layout_spacing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <com.reputasi.callblocker.view.custom.ReputasiTextView
                android:gravity="center"
                android:id="@+id/tv_title"
                android:text="Your statistic this month"
                custom:fontType="robotoBold"
                android:textSize="@dimen/spammer_title_back_textsize"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_margin="10dp"
                android:layout_below="@id/tv_title"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="55dp">
            <include
                layout="@layout/column_statistic"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/vw_top_blocked_number"/>
            <include
                layout="@layout/column_statistic"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/vw_top_blocked_category"/>
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"/>
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_margin="5dp"
                    android:src="@drawable/pin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.reputasi.callblocker.view.custom.ReputasiTextView
                    android:gravity="center"
                    android:id="@+id/tv_chart_title"
                    android:text="Personal Blacklist"
                    custom:fontType="robotoBold"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>