<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_legend_icon"
        android:layout_margin="5dp"
        android:src="@drawable/circle_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.reputasi.callblocker.view.custom.ReputasiTextView
            android:id="@+id/tv_legend_title"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            custom:fontType="robotoBold"
            android:text="legend title"
            android:textColor="@color/white"
            android:textSize="12sp"/>
        <com.reputasi.callblocker.view.custom.ReputasiTextView
            android:id="@+id/tv_legend_info"
            android:layout_gravity="right|center_vertical"
            android:gravity="right|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            custom:fontType="robotoBold"
            android:text="20%"
            android:paddingRight="10dp"
            android:textColor="@color/white"
            android:textSize="12sp"/>
    </RelativeLayout>
</LinearLayout>